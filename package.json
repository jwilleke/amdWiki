{
  "name": "amdwiki",
  "version": "1.3.2",
  "description": "JSPWiki-style wiki with advanced search capabilities",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci",
    "version": "echo $npm_package_version",
    "version:show": "node version.js",
    "version:patch": "node version.js patch",
    "version:minor": "node version.js minor",
    "version:major": "node version.js major",
    "version:help": "node version.js help",
    "migrate:schema": "node scripts/migrate-to-schema.js",
    "migrate:schema:dry": "node scripts/migrate-to-schema.js --dry-run",
    "migrate:schema:backup": "node scripts/migrate-to-schema.js --backup"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/legacy/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "fs-extra": "^11.3.1",
    "gray-matter": "^4.0.3",
    "lunr": "^2.3.9",
    "markdownlint": "^0.38.0",
    "multer": "^2.0.2",
    "showdown": "^2.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "jest": "^30.1.3",
    "supertest": "^7.1.4"
  }
}
