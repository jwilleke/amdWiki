# amdWiki Kubernetes Secrets
# IMPORTANT: Do NOT commit this file with real secrets!
#
# Usage:
#   1. Copy this file: cp secrets.yaml.example secrets.yaml
#   2. Generate a session secret: openssl rand -base64 32
#   3. Base64 encode and add to secrets.yaml
#   4. Deploy: kubectl apply -f secrets.yaml
#
# To create secret from command line:
#   kubectl create secret generic amdwiki-secrets \
#     --from-literal=session-secret=$(openssl rand -base64 32)
apiVersion: v1
kind: Secret
metadata:
  name: amdwiki-secrets
  labels:
    app: amdwiki
    app.kubernetes.io/name: amdwiki
type: Opaque
data:
  # Base64 encoded session secret
  # Generate with: echo -n "your-secret-here" | base64
  # Or: openssl rand -base64 32 | base64
  session-secret: Y2hhbmdlLW1lLXRvLWEtc2VjdXJlLXJhbmRvbS1zdHJpbmc=

  # Optional: Admin password for initial setup
  # admin-password: YWRtaW4xMjM=
