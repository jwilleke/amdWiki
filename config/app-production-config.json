{
  "_comment": "Production environment overrides",
  "_description": "These settings override app-default-config.json in production (NODE_ENV=production)",

  "_comment_server": "Server binding for Docker - must bind to 0.0.0.0 to accept external connections",
  "amdwiki.server.host": "0.0.0.0",
  "amdwiki.server.port": 3000,

  "amdwiki.logging.level": "info",
  "amdwiki.logging.debug.enabled": false,
  "amdwiki.logging.debug.session": false,
  "amdwiki.logging.debug.login": false,

  "amdwiki.rendering.useAdvancedParser": true,
  "amdwiki.rendering.logParsingMethod": false,

  "amdwiki.session.cookie.secure": true,
  "amdwiki.session.cookie.httpOnly": true,
  "amdwiki.session.cookie.sameSite": "strict",

  "_comment_performance": "Optimized performance settings for production",
  "amdwiki.cache.enabled": true,
  "amdwiki.cache.ttl": 3600,
  "amdwiki.search.indexOnStartup": true,

  "_comment_security": "Enhanced security for production",
  "amdwiki.features.maintenance.enabled": false,
  "amdwiki.features.maintenance.allowAdmins": true
}
