{
  "_comment": "Test environment overrides",
  "_description": "These settings override app-default-config.json in testing (NODE_ENV=test)",

  "amdwiki.logging.level": "warn",
  "amdwiki.logging.debug.enabled": false,
  "amdwiki.logging.debug.session": false,
  "amdwiki.logging.debug.login": false,

  "amdwiki.rendering.useAdvancedParser": true,
  "amdwiki.rendering.logParsingMethod": false,

  "_comment_test": "Use in-memory storage for tests",
  "amdwiki.cache.enabled": false,
  "amdwiki.search.indexOnStartup": false,

  "_comment_session": "Fast sessions for testing",
  "amdwiki.session.maxAge": 60000,

  "_comment_features": "Disable features not needed in tests",
  "amdwiki.features.maintenance.enabled": false
}
