<%- include('header', { pageName: '' }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h2 mb-0">Export Pages</h1>
    <a href="/admin" class="btn" style="background-color: var(--btn-secondary-bg); color: var(--btn-secondary-text); border-color: var(--btn-secondary-border);">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Export Individual Page</h5>
            </div>
            <div class="card-body">
                <form id="single-export-form">
                    <div class="form-group mb-3">
                        <label for="page-select">Select Page:</label>
                        <select class="form-control" id="page-select" required>
                            <option value="">-- Select a page --</option>
                            <% pageNames.forEach(pageName => { %>
                                <option value="<%= pageName %>"><%= pageName %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label>Export Format:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="format" id="format-html" value="html" checked>
                            <label class="form-check-label" for="format-html">
                                HTML (Web page with styling)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="format" id="format-markdown" value="markdown">
                            <label class="form-check-label" for="format-markdown">
                                Markdown (Original wiki format)
                            </label>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn" style="background-color: var(--btn-primary-bg); color: var(--btn-primary-text); border-color: var(--btn-primary-border);">
                        <i class="fas fa-download"></i> Export Page
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h5>Export Multiple Pages</h5>
            </div>
            <div class="card-body">
                <form id="multi-export-form">
                    <div class="form-group mb-3">
                        <label>Select Pages (hold Ctrl/Cmd for multiple):</label>
                        <select class="form-control" id="pages-select" multiple size="8">
                            <% pageNames.forEach(pageName => { %>
                                <option value="<%= pageName %>"><%= pageName %></option>
                            <% }); %>
                        </select>
                        <small class="form-text text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple pages</small>
                    </div>
                    
                    <button type="submit" class="btn" style="background-color: var(--btn-success-bg); color: var(--btn-success-text); border-color: var(--btn-success-border);">
                        <i class="fas fa-download"></i> Export Selected Pages as HTML
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Export Information</h5>
            </div>
            <div class="card-body">
                <h6>Available Formats:</h6>
                <ul>
                    <li><strong>HTML:</strong> Complete web page with styling, suitable for viewing in browsers or converting to PDF</li>
                    <li><strong>Markdown:</strong> Original wiki format, suitable for backup or migration</li>
                </ul>
                
                <h6>Features:</h6>
                <ul>
                    <li>Preserves page formatting and links</li>
                    <li>Includes metadata (categories, keywords)</li>
                    <li>Multi-page exports include table of contents</li>
                    <li>Export timestamp included</li>
                </ul>
                
                <div class="mt-3">
                    <a href="/exports" class="btn btn-sm" style="background-color: var(--btn-outline-secondary-bg); color: var(--btn-outline-secondary-text); border-color: var(--btn-outline-secondary-border);">
                        <i class="fas fa-list"></i> View Past Exports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('single-export-form').addEventListener('submit', async function(e) {
    e.preventDefault();

    const pageSelect = document.getElementById('page-select');
    const format = document.querySelector('input[name="format"]:checked').value;
    const pageName = pageSelect.value;

    if (!pageName) {
        alert('Please select a page to export');
        return;
    }

    const url = `/export/${format}/${encodeURIComponent(pageName)}`;
    try {
        const response = await fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                pageName: pageName
            })
        });

        if (response.ok) {
            // Get the filename from Content-Disposition header or create a default
            const contentDisposition = response.headers.get('Content-Disposition');
            let filename = `${pageName}.${format === 'markdown' ? 'md' : 'html'}`;
            if (contentDisposition) {
                const match = contentDisposition.match(/filename="?([^";\n]+)"?/);
                if (match) filename = match[1];
            }

            // Create blob and trigger download
            const blob = await response.blob();
            const downloadUrl = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = downloadUrl;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(downloadUrl);
        } else {
            alert('Export failed: ' + response.statusText);
        }
    }
    catch (error) {
        console.error('Error during export:', error);
        alert('Export failed: ' + error.message);
    }
});

document.getElementById('multi-export-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const pagesSelect = document.getElementById('pages-select');
    const selectedPages = Array.from(pagesSelect.selectedOptions).map(option => option.value);
    
    if (selectedPages.length === 0) {
        alert('Please select at least one page to export');
        return;
    }
    
    // For now, the pop-up is shown
    // TODO: Implement multi-page export endpoint
    if (selectedPages.length > 0) {
        alert('Multi-page export feature is coming soon.');
    }
});
</script>

<%- include('footer') %>
