<script>
// Page autocomplete for search input
function initSearchPageAutocomplete() {
    if (typeof PageAutocomplete === 'undefined') {
        setTimeout(initSearchPageAutocomplete, 100);
        return;
    }

    const searchInput = document.getElementById('query');
    if (!searchInput) return;

    // Initialize page autocomplete
    const autocomplete = new PageAutocomplete({
        minChars: 2,
        maxSuggestions: 10,
        onSelect: function(suggestion) {
            // Navigate directly to the selected page
            window.location.href = `/wiki/${encodeURIComponent(suggestion.name)}`;
        }
    });

    // Show autocomplete as user types
    searchInput.addEventListener('input', function(e) {
        const query = searchInput.value.trim();

        if (query.length >= 2) {
            autocomplete.search(query, searchInput);
        } else {
            autocomplete.hideDropdown();
        }
    });

    // Handle keyboard navigation in autocomplete
    searchInput.addEventListener('keydown', function(e) {
        if (autocomplete.handleKeydown(e)) {
            // Autocomplete handled the key, prevent default
            e.preventDefault();
        }
    });

    // Hide autocomplete when clicking outside
    document.addEventListener('click', function(e) {
        if (e.target !== searchInput) {
            autocomplete.hideDropdown();
        }
    });
}

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSearchPageAutocomplete);
} else {
    initSearchPageAutocomplete();
}
</script>

<script>
// Auto-submit form when filters change
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    
    // Handle multi-select checkboxes
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            // Only auto-submit if there's already a search query or filter
            const hasQuery = document.getElementById('query').value.trim();
            const hasCategory = document.querySelector('input[name="category"]:checked');
            const hasKeywords = document.querySelector('input[name="keywords"]:checked');
            
            if (hasQuery || hasCategory || hasKeywords) {
                form.submit();
            }
        });
    });
    
    // Handle Search In checkboxes - only allow one selection
    const searchInCheckboxes = document.querySelectorAll('input[name="searchIn"]');
    searchInCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            if (this.checked) {
                searchInCheckboxes.forEach(cb => {
                    if (cb !== this) cb.checked = false;
                });
            }
        });
    });
});

// Toggle functions for expandable sections
function toggleMoreKeywords() {
    const moreSection = document.getElementById('moreKeywords');
    const btn = document.getElementById('moreKeywordsBtn');
    
    if (moreSection.classList.contains('d-none')) {
        moreSection.classList.remove('d-none');
        btn.style.display = 'none';
    } else {
        moreSection.classList.add('d-none');
        btn.style.display = 'inline-block';
    }
}

function toggleMoreCategories() {
    const moreSection = document.getElementById('moreCategories');
    const btn = document.getElementById('moreCategoriesBtn');
    
    if (moreSection.classList.contains('d-none')) {
        moreSection.classList.remove('d-none');
        btn.style.display = 'none';
    } else {
        moreSection.classList.add('d-none');
        btn.style.display = 'inline-block';
    }
}
</script>

