<%- include('header', { pageName: '' }) %>

<div class="search-page">
<h1 class="h2"><i class="fas fa-search"></i> Search</h1>

<!-- Search Tabs -->
<ul class="nav nav-tabs mb-3" id="searchTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link <%= searchTab !== 'attachments' ? 'active' : '' %>" id="pages-tab" data-bs-toggle="tab"
                data-bs-target="#pages-search" type="button" role="tab">
            <i class="fas fa-file-alt me-1"></i>Pages
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link <%= searchTab === 'attachments' ? 'active' : '' %>" id="attachments-tab" data-bs-toggle="tab"
                data-bs-target="#attachments-search" type="button" role="tab">
            <i class="fas fa-paperclip me-1"></i>Attachments
        </button>
    </li>
</ul>

<div class="tab-content" id="searchTabsContent">
    <!-- Pages Search Tab -->
    <div class="tab-pane fade <%= searchTab !== 'attachments' ? 'show active' : '' %>" id="pages-search" role="tabpanel">
        <!-- Simplified Search Form -->
        <div class="card mb-4 shadow-sm">
            <div class="card-body" style="background-color: var(--card-bg);">
                <form id="advancedSearchForm" action="/search" method="GET">
                    <div class="row g-3">
                        <!-- Search Input -->
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control form-control-lg" id="query" name="q"
                                       value="<%= query %>" placeholder="Search pages...">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </div>

                        <!-- Search In Dropdown -->
                        <div class="col-md-4">
                            <select class="form-select form-select-lg" name="searchIn" id="searchIn">
                                <option value="all" <%= (!searchIn || searchIn === 'all' || (Array.isArray(searchIn) && searchIn.includes('all'))) ? 'selected' : '' %>>All Fields</option>
                                <option value="title" <%= (searchIn === 'title' || (Array.isArray(searchIn) && searchIn.includes('title'))) ? 'selected' : '' %>>Titles Only</option>
                                <option value="content" <%= (searchIn === 'content' || (Array.isArray(searchIn) && searchIn.includes('content'))) ? 'selected' : '' %>>Content Only</option>
                            </select>
                        </div>
                    </div>

                    <!-- Collapsible Filters -->
                    <div class="mt-3">
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#filterOptions" aria-expanded="<%= (categories && categories.length > 0) || (userKeywords && userKeywords.length > 0) ? 'true' : 'false' %>">
                            <i class="fas fa-filter me-1"></i>Filters
                            <% if ((categories && categories.length > 0) || (userKeywords && userKeywords.length > 0)) { %>
                                <span class="badge bg-primary ms-1"><%= (categories?.length || 0) + (userKeywords?.length || 0) %></span>
                            <% } %>
                        </button>
                    </div>

                    <div class="collapse <%= (categories && categories.length > 0) || (userKeywords && userKeywords.length > 0) ? 'show' : '' %>" id="filterOptions">
                        <div class="row mt-3 g-3">
                            <!-- Categories -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="fas fa-folder me-1"></i>Categories</label>
                                <div class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                                    <% availableCategories.forEach(cat => { %>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   id="cat_<%= cat.replace(/[^a-zA-Z0-9]/g, '_') %>"
                                                   name="category" value="<%= cat %>"
                                                   <%= (Array.isArray(categories) ? categories.includes(cat) : category === cat) ? 'checked' : '' %>>
                                            <label class="form-check-label" for="cat_<%= cat.replace(/[^a-zA-Z0-9]/g, '_') %>"><%= cat %></label>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>

                            <!-- Keywords -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="fas fa-tags me-1"></i>Keywords</label>
                                <div class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                                    <% availableKeywords.forEach(kw => {
                                        const kwLabel = typeof kw === 'object' ? kw.label : kw;
                                        const kwDesc = typeof kw === 'object' ? kw.description : '';
                                    %>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   id="kw_<%= kwLabel.replace(/[^a-zA-Z0-9]/g, '_') %>"
                                                   name="keywords" value="<%= kwLabel %>"
                                                   <%= (Array.isArray(userKeywords) ? userKeywords.includes(kwLabel) : userKeywords === kwLabel) ? 'checked' : '' %>>
                                            <label class="form-check-label" for="kw_<%= kwLabel.replace(/[^a-zA-Z0-9]/g, '_') %>"
                                                   <% if (kwDesc) { %>title="<%= kwDesc %>"<% } %>>
                                                <%= kwLabel %><% if (kwDesc) { %> <small class="text-muted">- <%= kwDesc %></small><% } %>
                                            </label>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Page Search Results -->
        <% if (query || (categories && categories.length > 0) || (userKeywords && userKeywords.length > 0)) { %>
            <div class="mb-3">
                <span class="badge bg-info"><%= count %> result<%= count === 1 ? '' : 's' %></span>
                <% if (query) { %><span class="ms-2">for "<strong><%= query %></strong>"</span><% } %>
                <% if (categories && categories.length > 0) { %>
                    <span class="ms-2">in <%= categories.map(c => `<span class="badge bg-primary">${c}</span>`).join(' ') %></span>
                <% } %>
                <% if (userKeywords && userKeywords.length > 0) { %>
                    <span class="ms-2">with <%= userKeywords.map(k => `<span class="badge bg-info">${k}</span>`).join(' ') %></span>
                <% } %>
            </div>

            <% if (results.length > 0) { %>
                <div class="list-group">
                    <% results.forEach(result => { %>
                        <a href="/wiki/<%= encodeURIComponent(result.name) %>" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1"><i class="fas fa-file-alt me-2"></i><%= result.title %></h6>
                                <small class="text-muted">Score: <%= result.score.toFixed(2) %></small>
                            </div>
                            <% if (result.snippet) { %>
                                <p class="mb-1 small text-muted"><%= result.snippet %>...</p>
                            <% } %>
                            <div>
                                <% if (result.metadata.category) { %>
                                    <span class="badge bg-primary me-1"><i class="fas fa-folder me-1"></i><%= result.metadata.category %></span>
                                <% } %>
                                <% if (result.metadata.userKeywords && result.metadata.userKeywords.length > 0) { %>
                                    <% const kws = Array.isArray(result.metadata.userKeywords) ? result.metadata.userKeywords : []; %>
                                    <% kws.slice(0, 3).forEach(kw => { %>
                                        <span class="badge bg-info me-1"><%= kw %></span>
                                    <% }); %>
                                    <% if (kws.length > 3) { %><span class="badge bg-secondary">+<%= kws.length - 3 %></span><% } %>
                                <% } %>
                            </div>
                        </a>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No pages found matching your search.
                </div>
            <% } %>
        <% } else { %>
            <!-- Quick Browse -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header"><i class="fas fa-folder me-2"></i>Browse by Category</div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                <% availableCategories.slice(0, 12).forEach(cat => { %>
                                    <a href="/search?category=<%= encodeURIComponent(cat) %>" class="btn btn-sm btn-outline-primary">
                                        <%= cat %>
                                    </a>
                                <% }); %>
                                <% if (availableCategories.length > 12) { %>
                                    <span class="btn btn-sm btn-outline-secondary disabled">+<%= availableCategories.length - 12 %> more</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header"><i class="fas fa-tags me-2"></i>Browse by Keyword</div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                <% availableKeywords.slice(0, 12).forEach(kw => {
                                    const kwLabel = typeof kw === 'object' ? kw.label : kw;
                                %>
                                    <a href="/search?keywords=<%= encodeURIComponent(kwLabel) %>" class="btn btn-sm btn-outline-info">
                                        <%= kwLabel %>
                                    </a>
                                <% }); %>
                                <% if (availableKeywords.length > 12) { %>
                                    <span class="btn btn-sm btn-outline-secondary disabled">+<%= availableKeywords.length - 12 %> more</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Tips -->
            <div class="card">
                <div class="card-header"><i class="fas fa-lightbulb me-2"></i>Search Tips</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <code>"exact phrase"</code> - Exact match
                        </div>
                        <div class="col-md-4">
                            <code>+required -excluded</code> - Include/exclude
                        </div>
                        <div class="col-md-4">
                            <code>word*</code> - Wildcard
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Attachments Search Tab -->
    <div class="tab-pane fade <%= searchTab === 'attachments' ? 'show active' : '' %>" id="attachments-search" role="tabpanel">
        <div class="card mb-4 shadow-sm">
            <div class="card-body" style="background-color: var(--card-bg);">
                <form id="attachmentSearchForm" action="/search" method="GET">
                    <input type="hidden" name="tab" value="attachments">
                    <div class="row g-3">
                        <!-- Filename Search -->
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-file"></i></span>
                                <input type="text" class="form-control" id="attachmentQuery" name="attachmentQuery"
                                       value="<%= attachmentQuery || '' %>" placeholder="Search by filename...">
                            </div>
                        </div>

                        <!-- MIME Type Filter -->
                        <div class="col-md-4">
                            <select class="form-select" name="mimeType" id="mimeType">
                                <option value="">All Types</option>
                                <option value="image/" <%= mimeType === 'image/' ? 'selected' : '' %>>Images</option>
                                <option value="application/pdf" <%= mimeType === 'application/pdf' ? 'selected' : '' %>>PDFs</option>
                                <option value="text/" <%= mimeType === 'text/' ? 'selected' : '' %>>Text Files</option>
                                <option value="application/" <%= mimeType === 'application/' ? 'selected' : '' %>>Applications</option>
                            </select>
                        </div>

                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" type="submit">
                                <i class="fas fa-search me-1"></i>Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Attachment Results -->
        <% if (searchTab === 'attachments' && attachmentResults && attachmentResults.length > 0) { %>
            <div class="mb-3">
                <span class="badge bg-info"><%= attachmentResults.length %> attachment<%= attachmentResults.length === 1 ? '' : 's' %></span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Page</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% attachmentResults.forEach(att => { %>
                            <tr>
                                <td>
                                    <i class="fas fa-<%= att.mimeType && att.mimeType.startsWith('image/') ? 'image' : 'file' %> me-2"></i>
                                    <%= att.originalName || att.filename || att.identifier %>
                                </td>
                                <td><code><%= att.mimeType || 'unknown' %></code></td>
                                <td><%= att.size ? (att.size / 1024).toFixed(1) + ' KB' : '-' %></td>
                                <td>
                                    <% if (att.pageName) { %>
                                        <a href="/wiki/<%= encodeURIComponent(att.pageName) %>"><%= att.pageName %></a>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/attachments/<%= att.identifier %>" class="btn btn-sm btn-outline-primary" target="_blank">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <% if (att.mimeType && att.mimeType.startsWith('image/')) { %>
                                        <a href="/attachments/<%= att.identifier %>" class="btn btn-sm btn-outline-info" target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else if (searchTab === 'attachments' && (attachmentQuery || mimeType)) { %>
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>No attachments found matching your search.
            </div>
        <% } else if (searchTab === 'attachments') { %>
            <div class="text-center py-4 text-muted">
                <i class="fas fa-paperclip fa-3x mb-3"></i>
                <p>Search for attachments by filename or filter by type.</p>
            </div>
        <% } %>
    </div>
</div>

</div> <!-- Close search-page div -->

<script>
// Auto-submit on filter change
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('advancedSearchForm');
    const checkboxes = form.querySelectorAll('input[type="checkbox"]');

    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const hasQuery = document.getElementById('query').value.trim();
            const hasFilter = document.querySelector('input[name="category"]:checked, input[name="keywords"]:checked');
            if (hasQuery || hasFilter) {
                form.submit();
            }
        });
    });
});

// Page autocomplete
function initSearchPageAutocomplete() {
    if (typeof PageAutocomplete === 'undefined') {
        setTimeout(initSearchPageAutocomplete, 100);
        return;
    }

    const searchInput = document.getElementById('query');
    if (!searchInput) return;

    const autocomplete = new PageAutocomplete({
        minChars: 2,
        maxSuggestions: 10,
        onSelect: function(suggestion) {
            window.location.href = `/wiki/${encodeURIComponent(suggestion.name)}`;
        }
    });

    searchInput.addEventListener('input', function() {
        const query = searchInput.value.trim();
        if (query.length >= 2) {
            autocomplete.search(query, searchInput);
        } else {
            autocomplete.hideDropdown();
        }
    });

    searchInput.addEventListener('keydown', function(e) {
        if (autocomplete.handleKeydown(e)) {
            e.preventDefault();
        }
    });

    document.addEventListener('click', function(e) {
        if (e.target !== searchInput) {
            autocomplete.hideDropdown();
        }
    });
}

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSearchPageAutocomplete);
} else {
    initSearchPageAutocomplete();
}
</script>

<%- include('footer') %>
