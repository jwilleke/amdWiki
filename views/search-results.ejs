<%- include('header', { pageName: '' }) %>

<div class="search-page">
<h1 class="h2"><i class="fas fa-search"></i> Search</h1>
<div class="mb-3">
    <span class="badge" style="background-color: var(--badge-info-bg); color: var(--badge-info-text);">
        <%= count %> result<%= count === 1 ? '' : 's' %>
    </span>
</div>

<!-- Advanced Search Form -->
<div class="card mb-4 shadow-sm">
    <div class="card-header" style="background-color: var(--card-bg);">
        <h5 class="mb-0 d-flex justify-content-between align-items-center">
            <span><i class="fas fa-cog me-2"></i>Search Options</span>
            <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#searchOptions">
                <i class="fas fa-chevron-down"></i> Toggle
            </button>
        </h5>
    </div>
    <div class="collapse show" id="searchOptions">
    <div class="card-body" style="background-color: var(--card-bg);">
            <form action="/search" method="GET" class="row g-3">
                <!-- Text Search -->
                <div class="col-md-4">
                    <label for="query" class="form-label fw-bold">
                        <i class="fas fa-search me-1"></i>Search Text
                    </label>
                    <input type="text" class="form-control" id="query" name="q" value="<%= query %>" 
                           placeholder="Enter search terms...">
                </div>
                
                <!-- Search In -->
                <div class="col-md-4">
                    <label class="form-label fw-bold">
                        <i class="fas fa-filter me-1"></i>Search In
                    </label>
                    <div class="border rounded p-2" style="max-height: 120px; overflow-y: auto;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="searchIn_all" name="searchIn" value="all" 
                                   <%= (Array.isArray(searchIn) ? searchIn.includes('all') : searchIn === 'all') || !searchIn ? 'checked' : '' %>>
                            <label class="form-check-label" for="searchIn_all">All Fields</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="searchIn_title" name="searchIn" value="title"
                                   <%= (Array.isArray(searchIn) ? searchIn.includes('title') : searchIn === 'title') ? 'checked' : '' %>>
                            <label class="form-check-label" for="searchIn_title">Page Titles</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="searchIn_content" name="searchIn" value="content"
                                   <%= (Array.isArray(searchIn) ? searchIn.includes('content') : searchIn === 'content') ? 'checked' : '' %>>
                            <label class="form-check-label" for="searchIn_content">Page Content</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="searchIn_category" name="searchIn" value="category"
                                   <%= (Array.isArray(searchIn) ? searchIn.includes('category') : searchIn === 'category') ? 'checked' : '' %>>
                            <label class="form-check-label" for="searchIn_category">Categories</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="searchIn_keywords" name="searchIn" value="keywords"
                                   <%= (Array.isArray(searchIn) ? searchIn.includes('keywords') : searchIn === 'keywords') ? 'checked' : '' %>>
                            <label class="form-check-label" for="searchIn_keywords">Keywords</label>
                        </div>
                    </div>
                </div>
                
                <!-- Search Button -->
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary w-100" type="submit">
                        <i class="fas fa-search me-1"></i>Search
                    </button>
                </div>
                
                <!-- Include Categories -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fas fa-folder me-1"></i>Include Categories
                    </label>
                    <div class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                        <% availableCategories.forEach(cat => { %>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="category_<%= cat.replace(/[^a-zA-Z0-9]/g, '_') %>" 
                                       name="category" value="<%= cat %>" 
                                       <%= (Array.isArray(categories) ? categories.includes(cat) : category === cat) ? 'checked' : '' %>>
                                <label class="form-check-label" for="category_<%= cat.replace(/[^a-zA-Z0-9]/g, '_') %>">
                                    <%= cat %>
                                </label>
                            </div>
                        <% }); %>
                    </div>
                </div>
                
                <!-- Include User Keywords -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="fas fa-tags me-1"></i>Include User Keywords
                    </label>
                    <div class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                        <% availableKeywords.forEach(keyword => { %>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="keyword_<%= keyword.replace(/[^a-zA-Z0-9]/g, '_') %>" 
                                       name="keywords" value="<%= keyword %>" 
                                       <%= (Array.isArray(userKeywordsList) ? userKeywordsList.includes(keyword) : userKeywords === keyword) ? 'checked' : '' %>>
                                <label class="form-check-label" for="keyword_<%= keyword.replace(/[^a-zA-Z0-9]/g, '_') %>">
                                    <%= keyword %>
                                </label>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Search Results -->
<% if (query || category || userKeywords) { %>
    <div class="row" style="background-color: var(--card-bg);">
        <div class="col-md-9">
            <% if (results.length > 0) { %>
                <div class="mb-3">
                    <small class="text-muted">
                        Showing <%= results.length %> result<%= results.length === 1 ? '' : 's' %>
                        <% if (searchType === 'category') { %>
                            for categor<%= categories && categories.length > 1 ? 'ies' : 'y' %> 
                            "<%= Array.isArray(categories) ? categories.join('", "') : category %>"
                        <% } else if (searchType === 'keywords') { %>
                            for keyword<%= userKeywordsList && userKeywordsList.length > 1 ? 's' : '' %> 
                            "<%= Array.isArray(userKeywordsList) ? userKeywordsList.join('", "') : userKeywords %>"
                        <% } else if (query) { %>
                            for "<%= query %>"
                            <% if (categories && (Array.isArray(categories) ? categories.length > 0 : category)) { %>
                                in categor<%= (Array.isArray(categories) ? categories.length > 1 : false) ? 'ies' : 'y' %> 
                                "<%= Array.isArray(categories) ? categories.join('", "') : category %>"
                            <% } %>
                            <% if (userKeywordsList && (Array.isArray(userKeywordsList) ? userKeywordsList.length > 0 : userKeywords)) { %>
                                with keyword<%= (Array.isArray(userKeywordsList) ? userKeywordsList.length > 1 : false) ? 's' : '' %> 
                                "<%= Array.isArray(userKeywordsList) ? userKeywordsList.join('", "') : userKeywords %>"
                            <% } %>
                        <% } %>
                    </small>
                </div>

                <div class="list-group search-results" style="background-color: var(--card-bg); border: 1px solid var(--card-border); border-radius: 0.5rem;">
                    <% results.forEach((result, index) => { %>
                        <div class="list-group-item search-result-enter" style="background-color: var(--card-bg); border-bottom: 1px solid var(--card-border); color: var(--text-content);">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">
                                    <a href="/wiki/<%= encodeURIComponent(result.name) %>" class="text-decoration-none">
                                        <i class="fas fa-file-alt"></i> <%= result.title %>
                                    </a>
                                    <small class="text-muted">(Score: <%= result.score.toFixed(3) %>)</small>
                                </h6>
                            </div>
                            
                            <% if (result.snippet) { %>
                                <p class="mb-2 text-muted"><%= result.snippet %>...</p>
                            <% } %>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <% if (result.metadata.category) { %>
                                        <span class="badge bg-primary me-2">
                                            <i class="fas fa-folder me-1"></i><%= result.metadata.category %>
                                        </span>
                                    <% } %>
                                    
                                    <% if (result.metadata.userKeywords && result.metadata.userKeywords.length > 0) { %>
                                        <% result.metadata.userKeywords.slice(0, 3).forEach(keyword => { %>
                                            <span class="badge bg-info me-1">
                                                <i class="fas fa-tag me-1"></i><%= keyword %>
                                            </span>
                                        <% }); %>
                                        <% if (result.metadata.userKeywords.length > 3) { %>
                                            <span class="badge" style="background-color: var(--badge-light-bg); color: var(--badge-light-text);">+<%= result.metadata.userKeywords.length - 3 %> more</span>
                                        <% } %>
                                    <% } %>
                                </div>
                                
                                <small class="text-muted">
                                    <%= result.metadata.wordCount %> words
                                    <% if (result.metadata.lastModified) { %>
                                        • Modified: <%= new Date(result.metadata.lastModified).toLocaleDateString() %>
                                    <% } %>
                                </small>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <h5><i class="fas fa-info-circle"></i> No Results Found</h5>
                    <p class="mb-0">
                        No pages found matching your search criteria. Try:
                    </p>
                    <ul class="mb-0">
                        <li>Using different search terms</li>
                        <li>Checking your spelling</li>
                        <li>Using broader categories or keywords</li>
                        <li>Searching in all fields instead of specific ones</li>
                    </ul>
                </div>
            <% } %>
        </div>
        
        <!-- Search Statistics Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: var(--card-bg); color: var(--info-text, #0dcaf0);">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Search Statistics</h6>
                </div>
                <div class="card-body" style="background-color: var(--card-bg);">
                    <table class="table table-sm table-borderless">
                        <tr>
                            <td><i class="fas fa-file-alt style="color: var(--text-primary);" me-2"></i><strong>Total Pages:</strong></td>
                            <td><span class="badge" style="background-color: var(--badge-primary-bg); color: var(--badge-primary-text);"><%= stats.totalDocuments %></span></td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-folder style="color: var(--text-secondary);" me-2"></i><strong>Categories:</strong></td>
                            <td><span class="badge" style="background-color: var(--badge-secondary-bg); color: var(--badge-secondary-text);"><%= stats.totalCategories %></span></td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-tags style="color: var(--text-info);" me-2"></i><strong>Keywords:</strong></td>
                            <td><span class="badge" style="background-color: var(--badge-info-bg); color: var(--badge-info-text);"><%= stats.totalUserKeywords %></span></td>
                        </tr>
                    </table>
                </div>
            </div>
            
            <div class="card mt-3 shadow-sm">
                <div class="card-header" style="background-color: var(--card-bg); color: var(--warning-text, #ffc107);">
                    <h6 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Search Tips</h6>
                </div>
                <div class="card-body" style="background-color: var(--card-bg);">
                    <div class="small">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><strong>Exact phrase:</strong> <code>"your phrase"</code></li>
                            <li class="mb-2"><strong>Required word:</strong> <code>+required</code></li>
                            <li class="mb-2"><strong>Excluded word:</strong> <code>-excluded</code></li>
                            <li class="mb-2"><strong>Wildcard:</strong> <code>word*</code></li>
                            <li class="mb-0"><strong>Field search:</strong> <code>title:word</code></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <!-- Empty search state -->
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4>Search the Wiki</h4>
        <p class="text-muted">
            Enter search terms above to find pages, or use the filters to browse by category and keywords.
        </p>
        
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header" style="background-color: var(--card-bg); color: var(--primary-text, #0d6efd);"> 
                        <h6 class="mb-0"><i class="fas fa-folder"></i> Browse by Category</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2 browse-buttons">
                            <% availableCategories.slice(0, 8).forEach(cat => { %>
                                <a href="/search?category=<%= encodeURIComponent(cat) %>" 
                                   class="btn btn-sm" style="background-color: var(--btn-outline-primary-bg); color: var(--btn-outline-primary-text); border-color: var(--btn-outline-primary-border);">
                                    <i class="fas fa-folder-open"></i> <%= cat %>
                                </a>
                            <% }); %>
                            <% if (availableCategories.length > 8) { %>
                                <button class="btn btn-sm" style="background-color: var(--btn-outline-secondary-bg); color: var(--btn-outline-secondary-text); border-color: var(--btn-outline-secondary-border);" type="button" 
                                        onclick="toggleMoreCategories()" id="moreCategoriesBtn">
                                    +<%= availableCategories.length - 8 %> more categories...
                                </button>
                            <% } %>
                        </div>
                        <% if (availableCategories.length > 8) { %>
                            <div id="moreCategories" class="d-none mt-2">
                                <div class="d-flex flex-wrap gap-2 browse-buttons">
                                    <% availableCategories.slice(8).forEach(cat => { %>
                                        <a href="/search?category=<%= encodeURIComponent(cat) %>" 
                                           class="btn btn-sm" style="background-color: var(--btn-outline-primary-bg); color: var(--btn-outline-primary-text); border-color: var(--btn-outline-primary-border);">
                                            <i class="fas fa-folder-open"></i> <%= cat %>
                                        </a>
                                    <% }); %>
                                </div>
                                <button class="btn btn-link btn-sm p-0 mt-2" onclick="toggleMoreCategories()">
                                    <i class="fas fa-chevron-up"></i> Show fewer
                                </button>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header" style="background-color: var(--card-bg); color: var(--info-text, #0dcaf0);">
                        <h6 class="mb-0"><i class="fas fa-tags"></i> Browse by Keywords</h6>
                    </div>
                    <div class="card-body" style="background-color: var(--card-bg);">
                        <div class="d-flex flex-wrap gap-2 browse-buttons">
                            <% availableKeywords.slice(0, 10).forEach(keyword => { %>
                                <a href="/search?keywords=<%= encodeURIComponent(keyword) %>" 
                                   class="btn btn-sm" style="background-color: var(--btn-outline-info-bg); color: var(--btn-outline-info-text); border-color: var(--btn-outline-info-border);">
                                    <i class="fas fa-tag"></i> <%= keyword %>
                                </a>
                            <% }); %>
                            <% if (availableKeywords.length > 10) { %>
                                <button class="btn btn-sm" style="background-color: var(--btn-outline-secondary-bg); color: var(--btn-outline-secondary-text); border-color: var(--btn-outline-secondary-border);" type="button" 
                                        onclick="toggleMoreKeywords()" id="moreKeywordsBtn">
                                    +<%= availableKeywords.length - 10 %> more keywords...
                                </button>
                            <% } %>
                        </div>
                        <% if (availableKeywords.length > 10) { %>
                            <div id="moreKeywords" class="d-none mt-2">
                                <div class="d-flex flex-wrap gap-2 browse-buttons">
                                    <% availableKeywords.slice(10).forEach(keyword => { %>
                                        <a href="/search?keywords=<%= encodeURIComponent(keyword) %>" 
                                           class="btn btn-sm" style="background-color: var(--btn-outline-info-bg); color: var(--btn-outline-info-text); border-color: var(--btn-outline-info-border);">
                                            <i class="fas fa-tag"></i> <%= keyword %>
                                        </a>
                                    <% }); %>
                                </div>
                                <button class="btn btn-link btn-sm p-0 mt-2" onclick="toggleMoreKeywords()">
                                    <i class="fas fa-chevron-up"></i> Show fewer
                                </button>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">
                <div class="card border-light">
                    <div class="card-body" style="background-color: var(--card-bg);">
                        <h6><i class="fas fa-lightbulb style="color: var(--text-warning);""></i> Quick Search Tips</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled small">
                                    <li><code>"exact phrase"</code> - Search for exact phrases</li>
                                    <li><code>+required</code> - Require specific words</li>
                                    <li><code>-excluded</code> - Exclude specific words</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled small">
                                    <li><code>word*</code> - Wildcard matching</li>
                                    <li><code>title:word</code> - Search in titles only</li>
                                    <li>Use categories and keywords for filtering</li>
                                </ul>
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <a href="/wiki/Search%20Documentation" class="btn btn-sm" style="background-color: var(--btn-outline-info-bg); color: var(--btn-outline-info-text); border-color: var(--btn-outline-info-border);">
                                <i class="fas fa-book me-1"></i>Complete Search Documentation
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>

