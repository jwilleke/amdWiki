<%- include('header', { pageName: '' }) %>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Menu -->
        <div class="col-md-3">
            <%- leftMenu %>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-file-import"></i> Import Pages</h1>
                <a href="/admin" class="btn" style="background-color: var(--btn-secondary-bg); color: var(--btn-secondary-text); border-color: var(--btn-secondary-border);">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>

            <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

            <!-- Import from URL -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-globe"></i> Import from URL</h5>
                </div>
                <div class="card-body">
                    <form id="url-import-form">
                        <div class="mb-3">
                            <label for="importUrl" class="form-label">Page URL</label>
                            <input type="url" class="form-control" id="importUrl" name="url"
                                   placeholder="https://example.com/article" required>
                            <div class="form-text">URL of a web page to import as a wiki page</div>
                        </div>
                        <div class="mb-3">
                            <label for="urlTitle" class="form-label">Title Override (optional)</label>
                            <input type="text" class="form-control" id="urlTitle" name="title"
                                   placeholder="Leave blank to extract from page">
                            <div class="form-text">Override the page title extracted from the HTML</div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="url-preview-btn">
                                <i class="fas fa-search"></i> Preview
                            </button>
                            <button type="button" class="btn btn-success" id="url-execute-btn" disabled>
                                <i class="fas fa-file-import"></i> Import Page
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- URL Preview Result -->
            <div class="card mb-4" id="url-preview-result" style="display: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-eye"></i> URL Import Preview</h5>
                    <span class="badge bg-info" id="url-preview-title"></span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Metadata</h6>
                            <table class="table table-sm" id="url-metadata-table">
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Warnings</h6>
                            <ul id="url-warnings-list" class="list-unstyled small"></ul>
                        </div>
                    </div>
                    <h6>Content Preview</h6>
                    <div id="url-content-preview" class="border rounded p-3 bg-body-tertiary"
                         style="max-height: 400px; overflow-y: auto; white-space: pre-wrap; font-family: monospace; font-size: 0.85em;"></div>
                </div>
            </div>

            <!-- URL Import Result -->
            <div class="card mb-4" id="url-import-result" style="display: none;">
                <div class="card-header">
                    <h5><i class="fas fa-check-circle"></i> URL Import Result</h5>
                </div>
                <div class="card-body" id="url-import-result-body"></div>
            </div>

            <hr class="my-4">

            <!-- Import Form -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-folder-open"></i> Import from Files</h5>
                </div>
                <div class="card-body">
                    <form id="import-form" method="post" action="/admin/import/preview">
                        <div class="mb-3">
                            <label for="sourceDir" class="form-label">Source Path</label>
                            <input type="text" class="form-control" id="sourceDir" name="sourceDir"
                                   placeholder="/path/to/wiki/files or /path/to/file.txt" required
                                   value="<%= typeof sourceDir !== 'undefined' ? sourceDir : '' %>">
                            <div class="form-text">Path to a directory of wiki files or a single file to import</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="format" class="form-label">Format</label>
                                    <select class="form-select" id="format" name="format">
                                        <option value="auto">Auto-detect</option>
                                        <% converters.forEach(function(converter) { %>
                                        <option value="<%= converter.formatId %>"><%= converter.formatName %> (<%= converter.fileExtensions.join(', ') %>)</option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="limit" class="form-label">Limit (optional)</label>
                                    <input type="number" class="form-control" id="limit" name="limit"
                                           placeholder="No limit" min="1">
                                    <div class="form-text">Maximum files to import</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="generateUUIDs" name="generateUUIDs" checked>
                                <label class="form-check-label" for="generateUUIDs">
                                    Generate UUIDs for imported pages
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="preview-btn">
                                <i class="fas fa-search"></i> Preview Import
                            </button>
                            <button type="button" class="btn btn-success" id="execute-btn" disabled>
                                <i class="fas fa-play"></i> Execute Import
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview Results -->
            <div class="card mb-4" id="preview-results" style="display: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-list"></i> Preview Results</h5>
                    <span class="badge bg-info" id="preview-count">0 files</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Source File</th>
                                    <th>Target File</th>
                                    <th>Format</th>
                                    <th>Warnings</th>
                                </tr>
                            </thead>
                            <tbody id="preview-tbody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Import Results -->
            <div class="card mb-4" id="import-results" style="display: none;">
                <div class="card-header">
                    <h5><i class="fas fa-check-circle"></i> Import Results</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-success" id="result-converted">0</h3>
                                <p class="text-muted">Converted</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-warning" id="result-skipped">0</h3>
                                <p class="text-muted">Skipped</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-danger" id="result-failed">0</h3>
                                <p class="text-muted">Failed</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-info" id="result-duration">0</h3>
                                <p class="text-muted">Duration (ms)</p>
                            </div>
                        </div>
                    </div>
                    <div id="import-errors" class="mt-3" style="display: none;">
                        <h6 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Errors</h6>
                        <ul id="error-list" class="list-unstyled"></ul>
                    </div>
                </div>
            </div>

            <!-- Available Converters -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-exchange-alt"></i> Available Converters</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Format ID</th>
                                    <th>Name</th>
                                    <th>File Extensions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% converters.forEach(function(converter) { %>
                                <tr>
                                    <td><code><%= converter.formatId %></code></td>
                                    <td><%= converter.formatName %></td>
                                    <td><%= converter.fileExtensions.join(', ') %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('import-form');
    const previewBtn = document.getElementById('preview-btn');
    const executeBtn = document.getElementById('execute-btn');
    const previewResults = document.getElementById('preview-results');
    const importResults = document.getElementById('import-results');
    const previewTbody = document.getElementById('preview-tbody');
    const previewCount = document.getElementById('preview-count');

    let currentPreviewData = null;

    // Preview handler
    form.addEventListener('submit', async function(e) {
        e.preventDefault();

        previewBtn.disabled = true;
        previewBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Previewing...';

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        data.generateUUIDs = formData.has('generateUUIDs');

        try {
            const response = await fetch('/admin/import/preview', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
                currentPreviewData = data;
                displayPreview(result);
                executeBtn.disabled = false;
            } else {
                alert('Preview failed: ' + (result.error || 'Unknown error'));
            }
        } catch (err) {
            alert('Preview failed: ' + err.message);
        } finally {
            previewBtn.disabled = false;
            previewBtn.innerHTML = '<i class="fas fa-search"></i> Preview Import';
        }
    });

    // Execute handler
    executeBtn.addEventListener('click', async function() {
        if (!currentPreviewData) return;

        if (!confirm('Are you sure you want to import these files? This will create new pages.')) {
            return;
        }

        executeBtn.disabled = true;
        executeBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Importing...';

        try {
            const response = await fetch('/admin/import/execute', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(currentPreviewData)
            });

            const result = await response.json();
            displayResults(result);
        } catch (err) {
            alert('Import failed: ' + err.message);
        } finally {
            executeBtn.disabled = false;
            executeBtn.innerHTML = '<i class="fas fa-play"></i> Execute Import';
        }
    });

    function displayPreview(result) {
        previewResults.style.display = 'block';
        importResults.style.display = 'none';
        previewCount.textContent = result.files.length + ' files';

        previewTbody.innerHTML = '';
        result.files.forEach(function(file) {
            const isDuplicate = file.skippedReason === 'duplicate';
            const row = document.createElement('tr');
            if (isDuplicate) row.classList.add('table-warning');
            let statusBadge;
            if (isDuplicate) {
                statusBadge = '<span class="badge bg-danger">Duplicate â€” will skip</span>';
            } else if (file.warnings.length > 0) {
                statusBadge = '<span class="badge bg-warning">' + file.warnings.length + ' warnings</span>';
            } else {
                statusBadge = '<span class="badge bg-success">OK</span>';
            }
            row.innerHTML = `
                <td><code>${escapeHtml(file.sourcePath)}</code></td>
                <td><code>${isDuplicate ? escapeHtml(file.existingPageUuid || '') : escapeHtml(file.targetPath)}</code></td>
                <td><span class="badge bg-secondary">${file.format}</span></td>
                <td>${statusBadge}</td>
            `;
            previewTbody.appendChild(row);
        });
    }

    function displayResults(result) {
        importResults.style.display = 'block';

        document.getElementById('result-converted').textContent = result.converted;
        document.getElementById('result-skipped').textContent = result.skipped;
        document.getElementById('result-failed').textContent = result.failed;
        document.getElementById('result-duration').textContent = result.durationMs;

        const errorsSection = document.getElementById('import-errors');
        const errorList = document.getElementById('error-list');

        if (result.errors && result.errors.length > 0) {
            errorsSection.style.display = 'block';
            errorList.innerHTML = '';
            result.errors.forEach(function(err) {
                const li = document.createElement('li');
                li.innerHTML = `<code>${escapeHtml(err.file)}</code>: ${escapeHtml(err.message)}`;
                errorList.appendChild(li);
            });
        } else {
            errorsSection.style.display = 'none';
        }
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // --- URL Import ---
    const urlForm = document.getElementById('url-import-form');
    const urlPreviewBtn = document.getElementById('url-preview-btn');
    const urlExecuteBtn = document.getElementById('url-execute-btn');
    const urlPreviewResult = document.getElementById('url-preview-result');
    const urlImportResult = document.getElementById('url-import-result');

    let urlPreviewData = null;

    urlForm.addEventListener('submit', async function(e) {
        e.preventDefault();

        urlPreviewBtn.disabled = true;
        urlPreviewBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Fetching...';
        urlPreviewResult.style.display = 'none';
        urlImportResult.style.display = 'none';
        urlExecuteBtn.disabled = true;

        const formData = new FormData(urlForm);
        const data = Object.fromEntries(formData.entries());

        try {
            const response = await fetch('/admin/import/url/preview', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success && result.file) {
                urlPreviewData = data;
                displayUrlPreview(result.file);
                urlExecuteBtn.disabled = false;
            } else {
                alert('Preview failed: ' + (result.error || 'Unknown error'));
            }
        } catch (err) {
            alert('Preview failed: ' + err.message);
        } finally {
            urlPreviewBtn.disabled = false;
            urlPreviewBtn.innerHTML = '<i class="fas fa-search"></i> Preview';
        }
    });

    urlExecuteBtn.addEventListener('click', async function() {
        if (!urlPreviewData) return;

        if (!confirm('Import this page into the wiki?')) return;

        urlExecuteBtn.disabled = true;
        urlExecuteBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Importing...';

        try {
            const response = await fetch('/admin/import/url/execute', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(urlPreviewData)
            });

            const result = await response.json();
            displayUrlImportResult(result);
        } catch (err) {
            alert('Import failed: ' + err.message);
        } finally {
            urlExecuteBtn.disabled = false;
            urlExecuteBtn.innerHTML = '<i class="fas fa-file-import"></i> Import Page';
        }
    });

    function displayUrlPreview(file) {
        urlPreviewResult.style.display = 'block';
        document.getElementById('url-preview-title').textContent = file.metadata.title || '(no title)';

        // Metadata table
        const tbody = document.querySelector('#url-metadata-table tbody');
        tbody.innerHTML = '';
        const metaKeys = ['title', 'sourceUrl', 'system-category'];
        metaKeys.forEach(function(key) {
            if (file.metadata[key]) {
                const row = document.createElement('tr');
                row.innerHTML = '<td class="fw-bold">' + escapeHtml(key) + '</td><td>' + escapeHtml(String(file.metadata[key])) + '</td>';
                tbody.appendChild(row);
            }
        });
        // Schema metadata
        if (file.metadata.schema) {
            Object.entries(file.metadata.schema).forEach(function(entry) {
                if (entry[1]) {
                    const row = document.createElement('tr');
                    const val = Array.isArray(entry[1]) ? entry[1].join(', ') : String(entry[1]);
                    row.innerHTML = '<td class="fw-bold text-muted">schema.' + escapeHtml(entry[0]) + '</td><td>' + escapeHtml(val) + '</td>';
                    tbody.appendChild(row);
                }
            });
        }

        // Warnings
        const warningsList = document.getElementById('url-warnings-list');
        warningsList.innerHTML = '';
        if (file.warnings && file.warnings.length > 0) {
            file.warnings.forEach(function(w) {
                const li = document.createElement('li');
                li.innerHTML = '<i class="fas fa-exclamation-triangle text-warning"></i> ' + escapeHtml(w);
                warningsList.appendChild(li);
            });
        } else {
            warningsList.innerHTML = '<li class="text-success"><i class="fas fa-check"></i> No warnings</li>';
        }

        // Content preview (show first portion of the markdown)
        const contentPreview = document.getElementById('url-content-preview');
        // We show the metadata as a rough indication; the actual markdown isn't returned in preview
        // but we can show size info
        if (file.size > 0) {
            contentPreview.textContent = '(Converted content: ' + Math.round(file.size / 1024) + ' KB)\n\nPreview not available in dry-run mode. Click "Import Page" to create the page.';
        } else if (file.skippedReason === 'duplicate') {
            contentPreview.textContent = 'Page "' + (file.metadata.title || '') + '" already exists (UUID: ' + (file.existingPageUuid || 'unknown') + '). Import will be skipped.';
            urlExecuteBtn.disabled = true;
        } else {
            contentPreview.textContent = 'Content will be converted on import.';
        }
    }

    function displayUrlImportResult(result) {
        urlImportResult.style.display = 'block';
        const body = document.getElementById('url-import-result-body');

        if (result.success && result.file) {
            const title = result.file.metadata?.title || 'Untitled';
            body.innerHTML = `
                <div class="alert alert-success mb-0">
                    <i class="fas fa-check-circle"></i>
                    Page "<strong>${escapeHtml(title)}</strong>" imported successfully!
                    <br><small class="text-muted">File: ${escapeHtml(result.file.targetPath)} (${Math.round(result.file.size / 1024)} KB)</small>
                    <br><a href="/${encodeURIComponent(title)}" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="fas fa-external-link-alt"></i> View Page
                    </a>
                </div>
            `;
        } else if (result.skipped) {
            body.innerHTML = `
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    Import skipped: ${escapeHtml(result.file?.warnings?.[0] || 'Page already exists')}
                </div>
            `;
        } else {
            body.innerHTML = `
                <div class="alert alert-danger mb-0">
                    <i class="fas fa-times-circle"></i>
                    Import failed: ${escapeHtml(result.error || 'Unknown error')}
                </div>
            `;
        }
    }
});
</script>

<%- include('footer') %>
