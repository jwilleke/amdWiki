<%- include('header', { pageName: '' }) %>

<div class="container mt-4">
    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1><i class="fas fa-cogs"></i> Configuration Management</h1>
                    <p class="lead">Manage amdWiki configuration properties</p>
                </div>
                <a href="/admin" class="btn" style="background-color: var(--btn-secondary-bg); color: var(--btn-secondary-text); border-color: var(--btn-secondary-border);">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="row mt-4">
        <div class="col-12">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-current-tab" data-bs-toggle="tab" data-bs-target="#nav-current" type="button" role="tab">
                        <i class="fas fa-eye"></i> Current Configuration
                    </button>
                    <button class="nav-link" id="nav-custom-tab" data-bs-toggle="tab" data-bs-target="#nav-custom" type="button" role="tab">
                        <i class="fas fa-edit"></i> Custom Overrides
                    </button>
                    <button class="nav-link" id="nav-defaults-tab" data-bs-toggle="tab" data-bs-target="#nav-defaults" type="button" role="tab">
                        <i class="fas fa-list"></i> Default Values
                    </button>
                    <button class="nav-link" id="nav-add-tab" data-bs-toggle="tab" data-bs-target="#nav-add" type="button" role="tab">
                        <i class="fas fa-plus"></i> Add Property
                    </button>
                </div>
            </nav>

            <div class="tab-content" id="nav-tabContent">
                <!-- Current Configuration Tab -->
                <div class="tab-pane fade show active" id="nav-current" role="tabpanel">
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5><i class="fas fa-cogs"></i> Current Active Configuration</h5>
                            <small class="text-muted">Shows merged configuration (defaults + custom overrides)</small>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th style="width: 40%;">Property</th>
                                            <th style="width: 45%;">Value</th>
                                            <th style="width: 15%;">Source</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% Object.entries(mergedProperties).sort().forEach(([key, value]) => { %>
                                            <tr>
                                                <td>
                                                    <code><%= key %></code>
                                                </td>
                                                <td>
                                                    <% if (typeof value === 'object') { %>
                                                        <code><%= JSON.stringify(value) %></code>
                                                    <% } else { %>
                                                        <code><%= value %></code>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (customProperties[key] !== undefined) { %>
                                                        <span class="badge bg-warning text-dark">Custom</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Default</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Custom Overrides Tab -->
                <div class="tab-pane fade" id="nav-custom" role="tabpanel">
                    <div class="card mt-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="fas fa-edit"></i> Custom Configuration Overrides</h5>
                                <small class="text-muted">Properties in app-custom-config.json</small>
                            </div>
                            <form method="POST" action="/admin/configuration/reset" style="display: inline;" onsubmit="return confirm('Are you sure you want to reset all custom configurations to defaults?');">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-undo"></i> Reset All to Defaults
                                </button>
                            </form>
                        </div>
                        <div class="card-body">
                            <% if (Object.keys(customProperties).length === 0) { %>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> No custom configuration overrides are currently set.
                                    All values are using defaults from app-default-config.json.
                                </div>
                            <% } else { %>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th style="width: 40%;">Property</th>
                                                <th style="width: 45%;">Custom Value</th>
                                                <th style="width: 15%;">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% Object.entries(customProperties).sort().forEach(([key, value]) => { %>
                                                <tr>
                                                    <td>
                                                        <code><%= key %></code>
                                                    </td>
                                                    <td>
                                                        <form method="POST" action="/admin/configuration" class="d-inline">
                                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                            <input type="hidden" name="property" value="<%= key %>">
                                                            <input type="text" name="value" value="<%= value %>" class="form-control form-control-sm">
                                                        </td>
                                                        <td>
                                                            <button type="submit" class="btn btn-sm btn-primary">
                                                                <i class="fas fa-save"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Default Values Tab -->
                <div class="tab-pane fade" id="nav-defaults" role="tabpanel">
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5><i class="fas fa-list"></i> Default Configuration Values</h5>
                            <small class="text-muted">Values from app-default-config.json (read-only)</small>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th style="width: 40%;">Property</th>
                                            <th style="width: 60%;">Default Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% Object.entries(defaultProperties).sort().forEach(([key, value]) => { %>
                                            <tr>
                                                <td>
                                                    <code><%= key %></code>
                                                </td>
                                                <td>
                                                    <% if (typeof value === 'object') { %>
                                                        <code class="text-muted"><%= JSON.stringify(value) %></code>
                                                    <% } else { %>
                                                        <code class="text-muted"><%= value %></code>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Add Property Tab -->
                <div class="tab-pane fade" id="nav-add" role="tabpanel">
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5><i class="fas fa-plus"></i> Add New Configuration Property</h5>
                            <small class="text-muted">Add custom amdWiki configuration</small>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/admin/configuration">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                <div class="mb-3">
                                    <label for="newProperty" class="form-label">Property Name</label>
                                    <input type="text" class="form-control" id="newProperty" name="property" placeholder="amdwiki.property.name" required>
                                    <div class="form-text">Property name must start with 'amdwiki.' or 'log4j.'</div>
                                </div>

                                <div class="mb-3">
                                    <label for="newValue" class="form-label">Property Value</label>
                                    <input type="text" class="form-control" id="newValue" name="value" placeholder="property value" required>
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add Property
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Admin -->
    <div class="row mt-4">
        <div class="col-12">
            <a href="/admin" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Admin Dashboard
            </a>
        </div>
    </div>
</div>

<%- include('footer') %>