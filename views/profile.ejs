<%- include('header', { pageName: '' }) %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-4">
                <div class="card-header">
                    <h4><i class="fas fa-user"></i> User Profile</h4>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> <%= error %>
                        </div>
                    <% } %>
                    
                    <% if (success) { %>
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> <%= success %>
                        </div>
                    <% } %>
                    
                    <!-- User Information Display -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6><i class="fas fa-info-circle"></i> Account Information</h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Username:</strong> <%= user.username %></p>
                                    <p><strong>Email:</strong> <%= user.email %></p>
                                    <p><strong>Display Name:</strong> <%= user.displayName %></p>
                                    <p><strong>Account Type:</strong> 
                                        <% if (user.isExternal) { %>
                                            <span class="badge" style="background-color: var(--badge-info-bg); color: var(--badge-info-text);">OAuth/External</span>
                                        <% } else { %>
                                            <span class="badge" style="background-color: var(--badge-primary-bg); color: var(--badge-primary-text);">Local Account</span>
                                        <% } %>
                                    </p>
                                    <p><strong>Roles:</strong> 
                                        <% user.roles.forEach(role => { %>
                                            <span class="badge bg-secondary me-1"><%= role %></span>
                                        <% }) %>
                                    </p>
                                    <p><strong>Member Since:</strong> <%= new Date(user.createdAt).toLocaleDateString() %></p>
                                    <% if (user.lastLogin) { %>
                                        <p><strong>Last Login:</strong> <%= new Date(user.lastLogin).toLocaleString() %></p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6><i class="fas fa-shield-alt"></i> Permissions</h6>
                                </div>
                                <div class="card-body" style="max-height: 200px; overflow-y: auto;">
                                    <% if (permissions && permissions.length > 0) { %>
                                        <% permissions.forEach(permission => { %>
                                            <span class="badge bg-success me-1 mb-1"><%= permission %></span>
                                        <% }) %>
                                    <% } else { %>
                                        <p class="text-muted">No specific permissions assigned</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- User Preferences Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6><i class="fas fa-cogs"></i> User Preferences</h6>
                                </div>
                                <div class="card-body">
                                    <form action="/preferences" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h6><i class="fas fa-edit"></i> Editor Settings</h6>
                                                
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="checkbox" id="smartPairs" name="editor.plain.smartpairs" 
                                                           <%= (user.preferences && user.preferences['editor.plain.smartpairs']) ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="smartPairs">
                                                        <strong>Smart Typing Pairs</strong>
                                                        <br><small class="text-muted">Auto pairing of () [] {} &lt;&gt; "" ''</small>
                                                    </label>
                                                </div>
                                                
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="checkbox" id="autoIndent" name="editor.autoindent" 
                                                           <%= (user.preferences && user.preferences['editor.autoindent']) ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="autoIndent">
                                                        <strong>Auto Indent</strong>
                                                        <br><small class="text-muted">Automatically indent new lines</small>
                                                    </label>
                                                </div>
                                                
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="checkbox" id="lineNumbers" name="editor.linenumbers" 
                                                           <%= (user.preferences && user.preferences['editor.linenumbers']) ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="lineNumbers">
                                                        <strong>Show Line Numbers</strong>
                                                        <br><small class="text-muted">Display line numbers in editor</small>
                                                    </label>
                                                </div>
                                                
                                                <div class="form-group mb-3">
                                                    <label for="editorTheme" class="form-label"><strong>Editor Theme</strong></label>
                                                    <select class="form-control" id="editorTheme" name="editor.theme">
                                                        <option value="default" <%= (user.preferences && user.preferences['editor.theme'] === 'default') ? 'selected' : '' %>>Default</option>
                                                        <option value="dark" <%= (user.preferences && user.preferences['editor.theme'] === 'dark') ? 'selected' : '' %>>Dark</option>
                                                        <option value="monokai" <%= (user.preferences && user.preferences['editor.theme'] === 'monokai') ? 'selected' : '' %>>Monokai</option>
                                                        <option value="solarized" <%= (user.preferences && user.preferences['editor.theme'] === 'solarized') ? 'selected' : '' %>>Solarized</option>
                                                    </select>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-6">
                                                <h6><i class="fas fa-eye"></i> Display Settings</h6>
                                                
                                                <div class="form-group mb-3">
                                                    <label for="pageSize" class="form-label"><strong>Pages Per List</strong></label>
                                                    <select class="form-control" id="pageSize" name="display.pagesize">
                                                        <option value="10" <%= (user.preferences && user.preferences['display.pagesize'] === '10') ? 'selected' : '' %>>10</option>
                                                        <option value="25" <%= (user.preferences && user.preferences['display.pagesize'] === '25') ? 'selected' : '' %>>25</option>
                                                        <option value="50" <%= (user.preferences && user.preferences['display.pagesize'] === '50') ? 'selected' : '' %>>50</option>
                                                        <option value="100" <%= (user.preferences && user.preferences['display.pagesize'] === '100') ? 'selected' : '' %>>100</option>
                                                    </select>
                                                </div>
                                                
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="checkbox" id="showToolTips" name="display.tooltips" 
                                                           <%= (user.preferences && user.preferences['display.tooltips']) ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="showToolTips">
                                                        <strong>Show Tooltips</strong>
                                                        <br><small class="text-muted">Display helpful tooltips on hover</small>
                                                    </label>
                                                </div>
                                                
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="checkbox" id="readerMode" name="display.readermode" 
                                                           <%= (user.preferences && user.preferences['display.readermode']) ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="readerMode">
                                                        <strong>Default Reader Mode</strong>
                                                        <br><small class="text-muted">Open pages in reader mode by default</small>
                                                    </label>
                                                </div>
                                                
                                                <h6><i class="fas fa-globe"></i> Localization & Date/Time</h6>

                                                <div class="form-group mb-3">
                                                    <label for="locale" class="form-label"><strong>Locale</strong></label>
                                                    <select class="form-control" id="locale" name="preferences.locale">
                                                        <option value="en-US" <%= (user.preferences && user.preferences.locale === 'en-US') ? 'selected' : '' %>>English (United States)</option>
                                                        <option value="en-GB" <%= (user.preferences && user.preferences.locale === 'en-GB') ? 'selected' : '' %>>English (United Kingdom)</option>
                                                        <option value="fr-FR" <%= (user.preferences && user.preferences.locale === 'fr-FR') ? 'selected' : '' %>>Français (France)</option>
                                                        <option value="de-DE" <%= (user.preferences && user.preferences.locale === 'de-DE') ? 'selected' : '' %>>Deutsch (Deutschland)</option>
                                                        <option value="es-ES" <%= (user.preferences && user.preferences.locale === 'es-ES') ? 'selected' : '' %>>Español (España)</option>
                                                        <option value="it-IT" <%= (user.preferences && user.preferences.locale === 'it-IT') ? 'selected' : '' %>>Italiano (Italia)</option>
                                                        <option value="pt-BR" <%= (user.preferences && user.preferences.locale === 'pt-BR') ? 'selected' : '' %>>Português (Brasil)</option>
                                                        <option value="ja-JP" <%= (user.preferences && user.preferences.locale === 'ja-JP') ? 'selected' : '' %>>日本語 (日本)</option>
                                                        <option value="ko-KR" <%= (user.preferences && user.preferences.locale === 'ko-KR') ? 'selected' : '' %>>한국어 (대한민국)</option>
                                                        <option value="zh-CN" <%= (user.preferences && user.preferences.locale === 'zh-CN') ? 'selected' : '' %>>中文 (中国)</option>
                                                        <option value="ru-RU" <%= (user.preferences && user.preferences.locale === 'ru-RU') ? 'selected' : '' %>>Русский (Россия)</option>
                                                        <option value="ar-SA" <%= (user.preferences && user.preferences.locale === 'ar-SA') ? 'selected' : '' %>>العربية (السعودية)</option>
                                                        <option value="hi-IN" <%= (user.preferences && user.preferences.locale === 'hi-IN') ? 'selected' : '' %>>हिन्दी (भारत)</option>
                                                    </select>
                                                    <small class="form-text text-muted">Determines date, time, and number formatting</small>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <label class="form-label"><strong>Time Format</strong></label>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="preferences.timeFormat" id="timeFormat12" value="12h"
                                                               <%= (!user.preferences || !user.preferences.timeFormat || user.preferences.timeFormat === '12h') ? 'checked' : '' %>>
                                                        <label class="form-check-label" for="timeFormat12">
                                                            12-hour (2:30 PM)
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="preferences.timeFormat" id="timeFormat24" value="24h"
                                                               <%= (user.preferences && user.preferences.timeFormat === '24h') ? 'checked' : '' %>>
                                                        <label class="form-check-label" for="timeFormat24">
                                                            24-hour (14:30)
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <label for="timezone" class="form-label"><strong>Timezone</strong></label>
                                                    <select class="form-control" id="timezone" name="preferences.timezone">
                                                        <% if (availableTimezones && availableTimezones.length > 0) { %>
                                                            <% let currentCategory = ''; %>
                                                            <% availableTimezones.forEach(tz => { %>
                                                                <% if (currentCategory !== tz.category) { %>
                                                                    <% if (currentCategory !== '') { %></optgroup><% } %>
                                                                    <% currentCategory = tz.category; %>
                                                                    <optgroup label="<%= tz.category %>">
                                                                <% } %>
                                                                <option value="<%= tz.value %>" <%= (user.preferences && user.preferences.timezone === tz.value) || (!user.preferences?.timezone && tz.value === 'UTC') ? 'selected' : '' %>><%= tz.label %></option>
                                                            <% }); %>
                                                            <% if (currentCategory !== '') { %></optgroup><% } %>
                                                        <% } else { %>
                                                            <option value="UTC" <%= (!user.preferences || !user.preferences.timezone || user.preferences.timezone === 'UTC') ? 'selected' : '' %>>UTC (Coordinated Universal Time)</option>
                                                        <% } %>
                                                    </select>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <label for="dateFormat" class="form-label"><strong>Date Format</strong></label>
                                                    <select class="form-control" id="dateFormat" name="preferences.dateFormat">
                                                        <% if (availableDateFormats && availableDateFormats.length > 0) { %>
                                                            <% availableDateFormats.forEach(fmt => { %>
                                                                <%
                                                                const currentFormat = user.preferences?.dateFormat || 'MM/dd/yyyy';
                                                                const isSelected = (fmt.value === 'auto' && !user.preferences?.dateFormat) ||
                                                                                 (fmt.value !== 'auto' && currentFormat === fmt.value);
                                                                %>
                                                                <option value="<%= fmt.value %>" <%= isSelected ? 'selected' : '' %> data-description="<%= fmt.description %>">
                                                                    <%= fmt.label %>
                                                                </option>
                                                            <% }); %>
                                                        <% } %>
                                                    </select>
                                                    <small class="form-text text-muted">Choose a specific format or use Auto to follow your locale setting</small>
                                                </div>

                                                <div class="card bg-info bg-opacity-10 border-info">
                                                    <div class="card-body p-2">
                                                        <h6 class="card-title mb-1"><i class="fas fa-eye"></i> Live Preview</h6>
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <small class="text-muted">Date:</small><br>
                                                                <span id="datePreview" class="fw-bold">Loading...</span>
                                                            </div>
                                                            <div class="col-6">
                                                                <small class="text-muted">Time:</small><br>
                                                                <span id="timePreview" class="fw-bold">Loading...</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group mb-3">
                                                    <label for="siteTheme" class="form-label"><strong>Site Theme</strong></label>
                                                    <select class="form-control" id="siteTheme" name="display.theme">
                                                        <option value="system" <%= (user.preferences && user.preferences['display.theme'] === 'system') ? 'selected' : '' %>>System Preference</option>
                                                        <option value="light" <%= (user.preferences && user.preferences['display.theme'] === 'light') ? 'selected' : '' %>>Light</option>
                                                        <option value="dark" <%= (user.preferences && user.preferences['display.theme'] === 'dark') ? 'selected' : '' %>>Dark</option>
                                                    </select>
                                                    <small class="form-text text-muted">Choose your preferred site theme</small>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <hr>
                                        
                                        <div class="d-flex justify-content-between">
                                            <button type="submit" class="btn" style="background-color: var(--btn-success-bg); color: var(--btn-success-text); border-color: var(--btn-success-border);">
                                                <i class="fas fa-save"></i> Save Preferences
                                            </button>
                                            
                                            <button type="button" class="btn btn-outline-secondary" onclick="resetPreferences()">
                                                <i class="fas fa-undo"></i> Reset to Defaults
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Profile Update Form -->
                    <form action="/profile" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="row">
                            <div class="col-md-6">
                                <h5><i class="fas fa-edit"></i> Update Profile</h5>
                                
                                <div class="form-group mb-3">
                                    <label for="displayName">Display Name:</label>
                                    <input type="text" class="form-control" id="displayName" name="displayName" 
                                           value="<%= user.displayName %>" required>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control" id="email" name="email" 
                                           value="<%= user.email %>" required>
                                </div>
                            </div>
                            
                            <!-- Password Change Section - Only for Local Users -->
                            <% if (!user.isExternal) { %>
                            <div class="col-md-6">
                                <h5><i class="fas fa-key"></i> Change Password</h5>
                                <p class="text-muted small">Leave blank to keep current password</p>
                                
                                <div class="form-group mb-3">
                                    <label for="currentPassword">Current Password:</label>
                                    <input type="password" class="form-control" id="currentPassword" name="currentPassword"
                                           placeholder="Enter current password">
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label for="newPassword">New Password:</label>
                                    <input type="password" class="form-control" id="newPassword" name="newPassword"
                                           placeholder="Enter new password" minlength="6">
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label for="confirmPassword">Confirm New Password:</label>
                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                           placeholder="Confirm new password">
                                </div>
                            </div>
                            <% } else { %>
                            <div class="col-md-6">
                                <div class="alert alert-info">
                                    <h5><i class="fas fa-info-circle"></i> OAuth Account</h5>
                                    <p class="mb-0">Your account is managed by an external OAuth provider. 
                                    Password changes must be made through your OAuth provider's system.</p>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn" style="background-color: var(--btn-primary-bg); color: var(--btn-primary-text); border-color: var(--btn-primary-border);">
                                <i class="fas fa-save"></i> Update Profile
                            </button>
                            
                            <a href="/" class="btn" style="background-color: var(--btn-secondary-bg); color: var(--btn-secondary-text); border-color: var(--btn-secondary-border);">
                                <i class="fas fa-arrow-left"></i> Back to Wiki
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Client-side password confirmation validation
document.getElementById('confirmPassword')?.addEventListener('input', function() {
    const newPassword = document.getElementById('newPassword').value;
    const confirmPassword = this.value;
    
    if (newPassword && confirmPassword && newPassword !== confirmPassword) {
        this.setCustomValidity('Passwords do not match');
    } else {
        this.setCustomValidity('');
    }
});

// Clear password fields if one is filled but not the others
document.getElementById('newPassword')?.addEventListener('input', function() {
    const currentPassword = document.getElementById('currentPassword');
    const confirmPassword = document.getElementById('confirmPassword');
    
    if (this.value && !currentPassword.value) {
        currentPassword.setCustomValidity('Current password required when changing password');
    } else {
        currentPassword.setCustomValidity('');
    }
});

document.getElementById('currentPassword')?.addEventListener('input', function() {
    if (this.value) {
        this.setCustomValidity('');
    }
});

// Reset preferences to defaults
function resetPreferences() {
    if (confirm('Are you sure you want to reset all preferences to their default values?')) {
        // Uncheck all checkboxes
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            if (checkbox.name.startsWith('editor.') || checkbox.name.startsWith('display.')) {
                checkbox.checked = false;
            }
        });
        
        // Reset select boxes to default values
        document.getElementById('editorTheme').value = 'default';
        document.getElementById('pageSize').value = '25';
        document.getElementById('dateFormat').value = 'default';
        document.getElementById('siteTheme').value = 'system';
    }
}

// Theme preference integration
document.addEventListener('DOMContentLoaded', function() {
    const siteThemeSelect = document.getElementById('siteTheme');
    
    if (siteThemeSelect && window.themeManager) {
        // Set initial value from theme manager
        const currentTheme = window.themeManager.currentTheme || 'system';
        siteThemeSelect.value = currentTheme;
        
        // Listen for changes and apply immediately
        siteThemeSelect.addEventListener('change', function() {
            if (window.themeManager) {
                window.themeManager.setTheme(this.value);
            }
        });
        
        // Listen for theme changes from other sources (like the toggle button)
        window.addEventListener('themeChanged', function(e) {
            if (e.detail && e.detail.theme !== siteThemeSelect.value) {
                siteThemeSelect.value = e.detail.theme;
            }
        });
    }
});

// Smart pairs demonstration
document.getElementById('smartPairs')?.addEventListener('change', function() {
    const demo = document.getElementById('smartPairsDemo');
    if (demo) {
        demo.textContent = this.checked ? 'Smart pairs enabled!' : 'Smart pairs disabled';
        demo.className = this.checked ? 'style="color: var(--text-success);"' : 'text-muted';
    }
});

// Locale and date/time preview functionality
function updateDateTimePreview() {
    const locale = document.getElementById('locale')?.value || 'en-US';
    const timeFormat = document.querySelector('input[name="preferences.timeFormat"]:checked')?.value || '12h';
    const timezone = document.getElementById('timezone')?.value || 'UTC';
    const dateFormat = document.getElementById('dateFormat')?.value || 'auto';

    const now = new Date();

    // Update date preview
    const datePreview = document.getElementById('datePreview');
    if (datePreview) {
        try {
            if (dateFormat === 'auto') {
                // Use browser's locale formatting
                datePreview.textContent = now.toLocaleDateString(locale);
            } else {
                // Use custom format - simplified formatting for preview
                datePreview.textContent = formatDateWithPattern(now, dateFormat, locale, timeFormat);
            }
        } catch (error) {
            datePreview.textContent = now.toLocaleDateString('en-US');
        }
    }

    // Update time preview
    const timePreview = document.getElementById('timePreview');
    if (timePreview) {
        try {
            const options = {
                hour12: timeFormat === '12h',
                timeZone: timezone === 'UTC' ? 'UTC' : timezone
            };
            timePreview.textContent = now.toLocaleTimeString(locale, options);
        } catch (error) {
            const options = {
                hour12: timeFormat === '12h',
                timeZone: 'UTC'
            };
            timePreview.textContent = now.toLocaleTimeString('en-US', options);
        }
    }
}

// Simple date formatting for preview
function formatDateWithPattern(date, pattern, locale, timeFormat) {
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const day = String(date.getDate()).padStart(2, '0');
    const hours = String(date.getHours()).padStart(2, '0');
    const minutes = String(date.getMinutes()).padStart(2, '0');

    switch (pattern) {
        case 'MM/dd/yyyy':
            return `${month}/${day}/${year}`;
        case 'dd/MM/yyyy':
            return `${day}/${month}/${year}`;
        case 'dd.MM.yyyy':
            return `${day}.${month}.${year}`;
        case 'yyyy/MM/dd':
            return `${year}/${month}/${day}`;
        case 'yyyy-MM-dd':
            return `${year}-${month}-${day}`;
        case 'yyyy-MM-dd HH:mm':
            return `${year}-${month}-${day} ${hours}:${minutes}`;
        default:
            return date.toLocaleDateString(locale);
    }
}

// Add event listeners for live preview
document.addEventListener('DOMContentLoaded', function() {
    // Initial preview update
    updateDateTimePreview();

    // Update preview when settings change
    document.getElementById('locale')?.addEventListener('change', updateDateTimePreview);
    document.getElementById('timezone')?.addEventListener('change', updateDateTimePreview);
    document.getElementById('dateFormat')?.addEventListener('change', updateDateTimePreview);
    document.querySelectorAll('input[name="preferences.timeFormat"]').forEach(radio => {
        radio.addEventListener('change', updateDateTimePreview);
    });

    // Update preview every 30 seconds to keep time current
    setInterval(updateDateTimePreview, 30000);
});
</script>

