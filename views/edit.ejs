<script>
    // Delete page function
    function deletePage() {
        if (confirm('Are you sure you want to delete this page? This action cannot be undone.')) {
            fetch('/delete/<%= pageName %>', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                if (response.ok) {
                    window.location.href = '/';
                } else {
                    alert('Error deleting page');
                }
            })
            .catch(error => {
                console.error('Delete error:', error);
                alert('Error deleting page');
            });
        }
    }

    // Categories dropdown functionality
    const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
    const maxCategories = 3;
    const selectedCategoriesText = document.getElementById('selectedCategoriesText');
    const categoriesDropdown = document.getElementById('categoriesDropdown');
    
    // Update the categories dropdown button text and disable/enable checkboxes
    function updateCategoriesDisplay() {
        const checkedCategoryBoxes = document.querySelectorAll('.category-checkbox:checked');
        const selectedCategories = Array.from(checkedCategoryBoxes).map(cb => cb.value);
        
        // Update button text
        if (selectedCategories.length === 0) {
            selectedCategoriesText.textContent = 'Select categories...';
            categoriesDropdown.classList.remove('btn-primary');
            categoriesDropdown.classList.add('btn-outline-secondary');
        } else {
            selectedCategoriesText.textContent = selectedCategories.join(', ');
            categoriesDropdown.classList.remove('btn-outline-secondary');
            categoriesDropdown.classList.add('btn-primary');
        }
        
        // Disable unchecked boxes if we've reached the limit
        categoryCheckboxes.forEach(checkbox => {
            if (!checkbox.checked && checkedCategoryBoxes.length >= maxCategories) {
                checkbox.disabled = true;
                checkbox.parentElement.parentElement.classList.add('text-muted');
            } else {
                checkbox.disabled = false;
                checkbox.parentElement.parentElement.classList.remove('text-muted');
            }
        });
    }
    
    // Add event listeners to category checkboxes
    categoryCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const checkedCategoryBoxes = document.querySelectorAll('.category-checkbox:checked');
            
            if (checkedCategoryBoxes.length > maxCategories) {
                this.checked = false;
                alert(`You can select a maximum of ${maxCategories} categories.`);
            }
            
            updateCategoriesDisplay();
        });
    });
    
    // Prevent dropdown from closing when clicking on checkboxes  
    document.querySelectorAll('.dropdown-item-checkbox').forEach(item => {
        item.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    });
    
    // Initialize categories display
    updateCategoriesDisplay();

    // Form validation for save button
    document.getElementById('save-btn').addEventListener('click', function(e) {
        // Check if at least one category is selected
        const checkedCategoryBoxes = document.querySelectorAll('.category-checkbox:checked');
        if (checkedCategoryBoxes.length === 0) {
            alert('Please select at least one category.');
            e.preventDefault();
            return;
        }
        
        // Prevent saving if more than 3 user-keywords are checked
        const userKeywordCheckboxes = document.querySelectorAll('.user-keyword-checkbox');
        let checkedCount = 0;
        userKeywordCheckboxes.forEach(cb => { if (cb.checked) checkedCount++; });
        if (checkedCount > 3) {
            alert('You can select up to 3 User-Keywords only.');
            e.preventDefault();
        }
    });

    // Limit User-Keywords checkbox selection to 3
    const userKeywordCheckboxes = document.querySelectorAll('.user-keyword-checkbox');
    function updateUserKeywordCheckboxes() {
        const checked = Array.from(userKeywordCheckboxes).filter(cb => cb.checked);
        if (checked.length >= 3) {
            userKeywordCheckboxes.forEach(cb => {
                if (!cb.checked) cb.disabled = true;
            });
        } else {
            userKeywordCheckboxes.forEach(cb => {
                cb.disabled = false;
            });
        }
    }
    userKeywordCheckboxes.forEach(cb => {
        cb.addEventListener('change', updateUserKeywordCheckboxes);
    });
    updateUserKeywordCheckboxes();
    const content = document.getElementById('content');
    const preview = document.getElementById('preview');

    const updatePreview = () => {
        const markdown = content.value;
        fetch('/api/preview', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ content: markdown, pageName: '<%= pageName %>' })
        })
        .then(response => response.json())
        .then(data => {
            preview.innerHTML = data.html;
        });
    };

    content.addEventListener('input', updatePreview);
    updatePreview(); // Initial preview
</script>


