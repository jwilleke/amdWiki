<%- include('header', { 
  title: title || 'Error',
  pages: pages || [],
  appName: appName || 'amdWiki',
  currentUser: currentUser || null
}) %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-danger">
        <div class="card-header bg-danger" style="color: var(--text-white);">
          <h4 class="mb-0">
            <i class="fas fa-exclamation-triangle"></i>
            Error <%= error.status %>
          </h4>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= title || error %></h5>
          <p class="card-text"><%= message %></p>

          <% if (typeof details !== 'undefined' && details) { %>
            <p class="text-muted"><%= details %></p>
          <% } %>

          <% if (typeof actions !== 'undefined' && actions && actions.length > 0) { %>
            <div class="mt-3">
              <% actions.forEach(action => { %>
                <a href="<%= action.url %>" class="btn <%= action.class %> me-2">
                  <%= action.label %>
                </a>
              <% }) %>
            </div>
          <% } else if (error.status === 403) { %>
            <div class="alert alert-warning">
              <strong>Access Denied:</strong> You need to be logged in with appropriate permissions to access this page.
            </div>
            <a href="/login" class="btn" style="background-color: var(--btn-primary-bg); color: var(--btn-primary-text); border-color: var(--btn-primary-border);">
              <i class="fas fa-sign-in-alt"></i> Login
            </a>
          <% } else if (error.status === 404) { %>
            <div class="alert alert-info">
              <strong>Not Found:</strong> The page you're looking for doesn't exist.
            </div>
            <a href="/" class="btn" style="background-color: var(--btn-primary-bg); color: var(--btn-primary-text); border-color: var(--btn-primary-border);">
              <i class="fas fa-home"></i> Go Home
            </a>
          <% } else { %>
            <a href="/" class="btn" style="background-color: var(--btn-primary-bg); color: var(--btn-primary-text); border-color: var(--btn-primary-border);">
              <i class="fas fa-home"></i> Go Home
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>
