<%- include('header', { pageName: '' }) %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/diff2html@3.4.56/bundles/css/diff2html.min.css" />

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Admin Dashboard</a></li>
                    <% if (sourceMode) { %>
                        <li class="breadcrumb-item"><a href="/admin/required-pages">Required Pages Sync</a></li>
                    <% } %>
                    <li class="breadcrumb-item active">Diff</li>
                </ol>
            </nav>
            <h1><i class="fas fa-code-branch"></i> Page Diff</h1>
        </div>
    </div>

    <!-- Header bar -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-2">
                    <div class="d-flex align-items-center gap-3 flex-wrap">
                        <div class="flex-grow-1">
                            <span class="badge bg-danger me-1">A</span>
                            <strong><%= titleA %></strong>
                            <span class="text-muted mx-2">vs</span>
                            <span class="badge bg-success me-1">B</span>
                            <strong><%= titleB %></strong>
                        </div>
                        <div class="d-flex gap-2">
                            <div class="btn-group" role="group" aria-label="Diff format">
                                <button type="button" class="btn btn-sm btn-outline-secondary active"
                                        id="btnUnified" onclick="switchFormat('line-by-line')">
                                    <i class="fas fa-align-left me-1"></i>Unified
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary"
                                        id="btnSideBySide" onclick="switchFormat('side-by-side')">
                                    <i class="fas fa-columns me-1"></i>Side-by-side
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Diff output -->
    <div class="row">
        <div class="col-12">
            <div id="diffContainer" class="border rounded">
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-spinner fa-spin fa-2x"></i>
                    <p class="mt-2">Rendering diff…</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/diff2html@3.4.56/bundles/js/diff2html.min.js"></script>
<script>
const diffString = <%- JSON.stringify(diffString) %>;
let currentFormat = 'line-by-line';

function switchFormat(format) {
    currentFormat = format;
    document.getElementById('btnUnified').classList.toggle('active', format === 'line-by-line');
    document.getElementById('btnSideBySide').classList.toggle('active', format === 'side-by-side');
    renderDiff(format);
}

function renderDiff(format) {
    const container = document.getElementById('diffContainer');
    if (!diffString || diffString.trim() === '') {
        container.innerHTML = '<div class="alert alert-success m-3"><i class="fas fa-check-circle me-2"></i>Files are identical — no differences found.</div>';
        return;
    }
    const html = Diff2Html.html(diffString, {
        drawFileList: false,
        matching: 'lines',
        outputFormat: format,
        renderNothingWhenEmpty: false
    });
    container.innerHTML = html;
}

// Render on load
document.addEventListener('DOMContentLoaded', function () {
    renderDiff('line-by-line');
});
</script>

<%- include('footer') %>
